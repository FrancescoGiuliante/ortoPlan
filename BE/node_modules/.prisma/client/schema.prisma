generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String      @unique
  credentials Credential?
  myorti      MyOrto[]
  
}

model Credential {
  userId   Int    @id
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  password String
}

model Ortaggi {
  nome                  String   @id
  periodoColtivazione   String
  esposizione           String
  tempiMaturazione      Int
  tipoTerreno           String
  distanzaPiantagione   String
  profonditaSemina      String
  temperaturaMin        String
  temperaturaMax        String
  frequenzaInnaffiatura Int
  note                  String
  myorti                MyOrto[]
}

model Glossario {
  parola      String @id
  definizione String
}

model MyOrto {
  id              Int              @id @default(autoincrement())
  nome            String
  citta           String
  tipoPiantagione String
  numeroPiante    Int
  dataSemina      String           @db.VarChar(10)
  sistemazione    String
  userId          Int
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  ortaggio        Ortaggi          @relation(fields: [tipoPiantagione], references: [nome])
  pianificazioni  Pianificazioni[]
  notifiche       Notifica[]
}

model Pianificazioni {
  id         Int        @id @default(autoincrement())
  data       String     @db.VarChar(10)
  attivita   String
  completata Boolean
  myOrtoId   Int
  myOrto     MyOrto     @relation(fields: [myOrtoId], references: [id], onDelete: Cascade)
  notifiche  Notifica[]
}

model Notifica {
  id               Int            @id @default(autoincrement())
  userId           Int
  pianificazioneId Int
  messaggio        String
  dataNotifica     DateTime       @default(now())
  visualizzata     Boolean        @default(false)
  pianificazione   Pianificazioni @relation(fields: [pianificazioneId], references: [id], onDelete: Cascade)
  MyOrto           MyOrto?        @relation(fields: [myOrtoId], references: [id])
  myOrtoId         Int?
}
