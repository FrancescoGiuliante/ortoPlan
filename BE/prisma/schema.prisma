generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String      @unique
  credentials Credential?
  myorti        MyOrto[]
}

model Credential {
  userId   Int    @id
  user     User   @relation(fields: [userId], references: [id])
  password String
}

model Ortaggi {
  nome                  String   @id
  periodoColtivazione   String
  esposizione           String
  tempiMaturazione      Int
  tipoTerreno           String
  distanzaPiantagione   String
  profonditaSemina      String
  temperaturaMin        String
  temperaturaMax        String
  frequenzaInnaffiatura Int
  note                  String
  myorti                  MyOrto[] // Relazione uno-a-molti con MyOrto
}

model Glossario {
  parola       String   @id
  definizione  String
}

model MyOrto {
  id              Int       @id @default(autoincrement())
  nome            String
  citta           String
  tipoPiantagione String
  numeroPiante    Int
  dataSemina      DateTime
  sistemazione    String
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  ortaggio        Ortaggi   @relation(fields: [tipoPiantagione], references: [nome])
}